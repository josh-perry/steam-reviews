{
  "name": "steam-reviews-monorepo",
  "version": "1.0.0",
  "description": "Steam Reviews Game",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm --prefix frontend install && npm --prefix api install",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:api": "npm --prefix api run dev",
    "build": "npm run build:api && npm run build:frontend",
    "build:frontend": "npm --prefix frontend run build",
    "build:api": "npm --prefix api run build",
    "start": "npm --prefix api start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend",
    "api"
  ]
}